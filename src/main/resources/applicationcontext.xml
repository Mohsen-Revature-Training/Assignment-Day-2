<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- Payment implementations -->
    <bean id="creditCardPayment" class="com.revature.training.payment.CreditCardPayment"/>
    <bean id="payPalPayment" class="com.revature.training.payment.PayPalPayment"/>

    <!-- PaymentProcessor bean -->
    <bean id="paymentProcessor" class="com.revature.training.payment.PaymentProcessor"/>

</beans>